<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow" Height="458" Width="819" Background="#FFE8CACA">
    <Canvas Margin="21,0,0,14" RenderTransformOrigin="0.4,0.4" HorizontalAlignment="Left" Width="179" Height="353" VerticalAlignment="Bottom" Background="#FFEED9D9">
    	<TreeView Height="300" Canvas.Left="10" Style="{DynamicResource SimpleTreeView}" Canvas.Top="10" Width="159" Background="#FFEED9D9"/>
    	<Button Content="Button" Canvas.Left="10" Style="{DynamicResource SimpleButton}" Canvas.Top="315" Width="159" Height="28"/>
    	<Grid Canvas.Left="185" Background="#FFEED9D9" Height="310" Width="595">
    		<RichTextBox Margin="10,10,10,0" FontSize="14.667" FontFamily="/ardbeg;component/Fonts/#Helvetica LT Std">
    			<FlowDocument>
    				<Paragraph><Run Text="RichTextBox"/></Paragraph>
    			</FlowDocument>
    		</RichTextBox>
    	</Grid>
    	<Canvas Height="40" Canvas.Left="185" Canvas.Top="315" Width="595" Background="#FFEED9D9">
    		<Button Content="Button" Canvas.Left="10" Style="{DynamicResource SimpleButton}" Canvas.Top="2" Width="159" Height="28"/>
    	</Canvas>
    </Canvas>
</Window>
